<h1>Listing Payments</h1>

<table class="table table-bordered table-condensed table-hover table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Workshop</th>
      <th>Monto</th>
      <th>Status</th>
      <th colspan="3">Control</th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.user.name %></td>
        <td><%= link_to payment.workshop.title, payment.workshop %></td>
        <td><%= payment.transaction_amount.to_s(:currency, unit: '$', separator: '.', delimiter: ',') %></td>
        <td><%= payment.collection_status %></td>
        <td><%= link_to 'Show', payment %></td>
        <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
        <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

