<li class="comment <%= 'rootComment' if comment.commentable_type != 'Comment' %>" id="comment_<%= comment.id %>">
	<% if comment.user == current_user %>
		<div class="comment-controls">
			<a href="#" class="comment-controls-trigger"><span></span><span></span><span></span></a>
			<ol class="comment-controls-options">
				<li><%= link_to 'Editar', edit_comment_path(comment), remote: true %></li>
				<li><%= link_to 'Eliminar', comment, method: :delete, data: { confirm: 'Â¿Seguro?' }, remote: true %></li>
			</ol>
		</div>
	<% end %>
	<div class="s3_des-msg-mLst-mPic"><%= image_tag comment.user.avatar.url(:thumb) %></div>
	<div class="s3_des-msg-mLst-mtxt">
		<div class="s3_des-msg-mLst-mtxt-nom"><%= comment.user.name %></div>
		<div class="s3_des-msg-mLst-mtxt-txt"><%= comment.text %></div>
		<% if comment.commentable_type != 'Comment' %>
			<a href="<%= comment.id %>" data-user-id="<%= current_user.id %>" class="utils-respond s3_des-msg-mLst-mtxt-lnk">Responder</a>
		<% else %>
			<a href="<%= comment.commentable.id %>" data-user-id="<%= current_user.id %>" class="utils-respond s3_des-msg-mLst-mtxt-lnk">Responder</a>
		<% end %>
	</div>
	<ul id="<%= 'comments_' + comment.id.to_s %>">
		<%= render comment.comments %>
	</ul>
</li>