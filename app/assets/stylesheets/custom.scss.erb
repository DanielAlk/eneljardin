@mixin transition($property, $delay, $ease-function) {
	-webkit-transition: $property $delay $ease-function;
	-moz-transition: $property $delay $ease-function;
	-ms-transition: $property $delay $ease-function;
	-o-transition: $property $delay $ease-function;
	transition: $property $delay $ease-function;
}

.hidden { display:none!important; }
.overflow-hidden { overflow:hidden!important; }
.t-left { text-align: left; }
.btn-full { cursor: pointer; display: block; width: 100%; height: 32px; background: #dbdbdb; border: none; font-family: 'Roboto Condensed', sans-serif; font-size: 14px; color: #FFF; outline: none; text-decoration: none; text-align: center; line-height: 32px; }
.bg-cover { display: block; background-position: center center; background-size: cover; }
.conceal-link { color: inherit; text-decoration: none; }

/* CARDS DE LA HOME BORDESITO DEL TITULO */
.pst_postal-tit { @include transition(text-indent, 400ms, ease-out); position: relative; max-width: none; border: none; white-space: nowrap; overflow: hidden;
	&:after { content: ' '; position: absolute; top: 100%; left: 0; border-bottom: 1px solid rgba(0,0,0,.25); width: 60%; margin: 0 20%; }
}

/* LOGO VERTIGO DEL FOOTER */
#s5_fir-lVrt { width: auto; height: 20px; margin-bottom: -8px; }

body>div.loader { position: fixed; width: 100%; height: 100%; background-color: rgba(0,0,0,0.8); top: 0; left: 0; background-repeat: no-repeat; background-position: center center; background-size: 80px 80px; z-index: 999999999999; background-image: url('<%= asset_path 'loader.gif' %>');
	&:after {content: 'Cargando…';color: #ccc;display: block;text-align: center;position: absolute;width: 100%;top: calc(50% + 60px);}
}

.notification { display: block; border-radius: 5px; position: fixed; right: 0; max-width: 400px; top: 0; text-align: center; z-index: 9999; background-color: rgba(132, 176, 89, 0.9); color: #FFF; line-height: 1em; padding: 25px; margin: 10px;
	&.alert { background-color: rgba(175, 72, 72, 0.9); }
}

.s3_des-msg-mInc-form label.error { position: absolute; right: 40px; bottom: 2px; font-size: 10px; }

.s3_des-msg-mInc-form input[type="submit"] { background: #EEE; border: none; outline: none; height: 28px; width: 28px; position: absolute; bottom: 3px; right: 3px; }

.s3_des-msg-mLst-mtxt-lnk { margin-top: 5px; display: inline-block; color: #90ae5e; text-decoration: none; }

@mixin commentForm { position: relative; margin: 10px 0 0 46px;
	textarea {  border: 3px solid #dbdbdb; border-right-width: 34px; width: calc(100% - 37px); padding: 6px; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box; outline: none; overflow: hidden; resize: none; margin: 0px; height: 100px; font-family: 'Roboto Condensed', sans-serif; font-size: 11px; background-color: #e4e4e4; width: 100%; }
	input[type="submit"], button[type="reset"] { background: #EEE; border: none; outline: none; height: 28px; width: 28px; position: absolute; bottom: 6px; right: 3px; }
	button[type="reset"] { bottom: auto; top: 3px; }
	label.error { position: absolute; right: 37px; bottom: 6px; font-size: 10px; }
}

.nav-user-name-fix { background: #a49f9c; min-width: 50px; display: inline-block; margin-top: -9px; text-align: center; max-width: 90px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

/*COMMENTS CONTROLS*/
.comment { position: relative; }
.comment-controls { position: absolute; top: 13px; right: 0;
	&.active .comment-controls-options { display: block; }
}
.comment-controls-options { display: none; margin: 0; padding: 5px; list-style: none; background: #f3f3f3; box-shadow: 0px 2px 10px #dbdbdb; border: 1px solid #dbdbdb; margin-top: 8px; position: relative;
	li { padding: 0!important; margin: 0;
		a { text-decoration: none; color: #454545; margin: 4px 10px; display: inline-block; }
	}
}
.comment-controls-trigger { float: right; margin-top: 5px; width: 15px;
	span { display: block; width: 3px; height: 3px; background-color: #8f8f8f; margin: 0 auto 2px; }
}
.comment.editing {
	&>.s3_des-msg-mLst-mtxt>:not(form) { display: none; }
	&>.comment-controls { display: none; }
}
.comment .s3_des-msg-mLst-mtxt {
	form.edit_comment, & + form.new_comment { @include commentForm;
		&.edit_comment { margin: 0; }
		@media(max-width: 520px) { margin-left: 0; }
	}
}

/* VIDEO PROPORTIONS FIX */
.s3_des-vid-vFr { position: relative; padding-bottom: 56.25%; margin-bottom: 10px;
	&>iframe { position: absolute; width: 100%; height: 100%; top: 0; left: 0; min-width: initial; min-height: initial; }
}

/* FIX SHOW BG IMAGE INSTEAD OF IMAGES TO PREVENT DIFFERENT SIZES MOVIES LISTS */
.s3_des-vid-col2-fch-pic.bg-cover { height: 75px; margin-bottom: -4px;
	@media(max-width: 752px) and (min-width: 521px) { height: 140px; margin-bottom: 5px; }
}
.s3_des-fchro-fch-pic.bg-cover { height: 180px; }

/* FIX NO OBLIQUE FONT LET TINYMCE MARKUP */
.s3_des-fchro-fch-cont-pls { font-style: normal; }

/* PAGINATION */
.pagination {
	&>* { display: inline-block; width: 25px; line-height: 1.6em; text-align: center; font-style: normal; text-decoration: none; border: none; box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.8); background-color: #84b059; color: #FFF; }
	&>.current { background-color: #d2691e; }
	&>.disabled { background-color: #a49f9c; display: none; }
}

/* BUTTON */
.button { display: inline-block; text-decoration: none; background-color: #84b059; color: #FFF; border: 1px solid #5b7c3b; border-radius: 4px; padding: 6px 12px; -webkit-box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.8); box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.8); margin-bottom: 5px; text-transform: uppercase; font-size: 18px; -webkit-box-sizing: border-box; -moz-box-sizing: border-box; box-sizing: border-box;
	&:active { -webkit-box-shadow: inset 0px 0px 3px 0px rgba(0,0,0,0.8); box-shadow: inset 0px 0px 3px 0px rgba(0,0,0,0.8); }
	&:hover { background-color: #79a350; }
}
.button-orange { background-color: #e28d4f; color: #FFF; border: 1px solid #c57b45;
	&:hover { background-color: #c57b45; }
}

/* FOOTER */
.footer-menu a { color:inherit; text-decoration: none; }

/* CONTACT FORM */
.s3_desCntc {
	label.error { display: block; text-align: right; margin: -25px 3px 11px; font-size: 12px; color: #722929; }
	textarea + label.error { margin: -30px 3px 16px; }
}

/* NEWSLETTER FORM */
#s3_des-nwsl-form-mail label.error { position: absolute; display: block; text-align: right; bottom: 2px; right: 2px; font-size: 12px; color: #ae3232; }


/* VIDEO EXPIRED SHOW IMAGE */
.s3_des-vid-vFr.bg-cover { position: relative; }
.s3_des-vid-vFr-txt { position: absolute; color: #FFF; text-align: center; width: 100%; bottom: 0; background-color: rgba(0,0,0,0.6); margin: 0; padding: 15px; -webkit-box-sizing: border-box; box-sizing: border-box; font-weight: 400; font-size: 16px;
	@media(max-width:520px) { font-size: 15px; height: 100%; font-weight: 400; }
}

/* CSS MORE SPACE IN MOBILE */
@media(max-width: 375px) {
	#s3_des {padding: 7px;}
}
#s2_back.movie { height: 150px;
	& + #s3_des { top: -85px; margin-bottom: -85px; }
}