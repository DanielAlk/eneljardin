<% content_for :extra_js do %>
  $('#new_user').validate({
    rules: {
      'user[password_confirmation]': {
        equalTo: "#user_password"
      }
    }
  });
<% end %>

<h2>Registrate</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, 'Nombre' %><br />
    <%= f.text_field :name, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "off", minlength: @minimum_password_length, required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirmar password' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarme" %>
  </div>
<% end %>

<%= render "users/shared/links" %>