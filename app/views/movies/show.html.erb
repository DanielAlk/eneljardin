<p id="notice"><%= notice %></p>

<div style="float:left; margin-right: -120px;">
  <%= image_tag @movie.image.url(:small), style: 'width:120px;height:auto;' %>
</div>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Price:</strong>
  <%= @movie.price %>
</p>

<p>
  <strong>Level:</strong>
  <%= @movie.level %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Video url:</strong>
  <%= @movie.video_url %>
</p>

<iframe style="margin-left:-75px;" src="<%= @movie.video_url %>?title=0&byline=0&portrait=0" width="640" height="360" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

