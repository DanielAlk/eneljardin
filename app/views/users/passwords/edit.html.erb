<% content_for :extra_js do %>
  $('#new_user').validate({
    rules: {
      'user[password_confirmation]': {
        equalTo: '#user_password'
      }
    }
  });
<% end %>

<h2>Cambiar tu contrase√±a</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Nuevo password" %><br />
    <%= f.password_field :password, autofocus: true, autocomplete: "off", minlength: @minimum_password_length, required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar nuevo password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar mi password" %>
  </div>
<% end %>

<%= render "users/shared/links" %>