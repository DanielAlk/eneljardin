$(function() {
	Comments.removeForms();
	var $comment = $('#comment_<%= params[:id] %>');
	var $text = $comment.find('.s3_des-msg-mLst-mtxt').first();
	var $form = $('<%= j(render('formjs')) %>');
	$text.after($form);
	$form.find('button[type=reset]').click(function() {
		$form.remove();
	});
	$form.validate();
	setTimeout(function() {
		$form.find('textarea').focus();
	}, 100);
})